-device secondary-vga,bus=head.3,addr=05.0,id=video.3 \
-device virtio-keyboard-pci,bus=head.3,addr=06.0,display=video.3 \
-device virtio-tablet-pci,bus=head.3,addr=7.0,display=video.3
